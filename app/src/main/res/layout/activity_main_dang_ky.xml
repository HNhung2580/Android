<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDangKy"
    android:background="@drawable/bgsignup">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="#BBCDDC"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125">

        <TextView
            android:id="@+id/textcreat"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Creat account"
            android:textAllCaps="true"
            android:textColor="#1C2349"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/iuser"
            android:hint="First name"
            android:textColorHint="#1C2349" />

        <EditText
            android:id="@+id/editLastName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/iuser"
            android:hint="Last name"
            android:textColorHint="#1C2349" />

        <EditText
            android:id="@+id/editTextEmailSignUp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/email"
            android:hint="Email"
            android:textColorHint="#1C2349" />

        <EditText
            android:id="@+id/editTextPassSignUp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/password"
            android:hint="Password"
            android:textColorHint="#1C2349" />


        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#34449A"
            android:text="Sign Up"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>